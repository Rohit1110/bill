<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <LinearLayout
        android:id="@+id/flayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgGray">
        <TextView
            android:id="@+id/txt_delivery_days_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/basic_text_field"
            android:text="Ajinkya Kulkarni"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/imglayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flayout"
        android:gravity="center">

     <!--   <ImageView
            android:id="@+id/img_delivery_days_item_icon"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:src="@drawable/sakal"
            />-->
        <ImageView
            android:id="@+id/img_delivery_days_item_icon"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/sakal"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dayslayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bgGray"
        android:layout_below="@+id/imglayout"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_mon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monday"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                style="@style/basic_sub_text_field"/>
           <!-- <RadioButton
                android:id="@+id/radio_mon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                />-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_tue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Tuesday"
                android:layout_weight="0.5"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                style="@style/basic_sub_text_field"/>
        <!--    <RadioButton
                android:id="@+id/radio_tue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

               />-->
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_wed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Wednesday"
                android:layout_weight="1.4"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                style="@style/basic_sub_text_field"/>
           <!-- <RadioButton
                android:id="@+id/radio_wed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5.7"
                android:layout_marginLeft="5dp"/>-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_thu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Thusday"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                style="@style/basic_sub_text_field"/>
          <!--  <RadioButton
                android:id="@+id/radio_thu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_fri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Friday"
                android:layout_weight="0.5"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                style="@style/basic_sub_text_field"/>
           <!-- <RadioButton
                android:id="@+id/radio_fri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"/>-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_sat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Saturday"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.4"
                style="@style/basic_sub_text_field"/>
           <!-- <RadioButton
                android:id="@+id/radio_sat"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"

                />-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_sun"
                style="@style/basic_sub_text_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                android:text="Sunday"
                android:textSize="25dp" />
            <!--<RadioButton
                android:id="@+id/radio_sun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="0.9"/>-->
        </LinearLayout>

        <Button
            android:id="@+id/fab_save_days"
            style="@style/basic_button"
            android:layout_width="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="5dp"
            android:text="Save"/>
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/dayslayout">

        <TextView
            android:id="@+id/txt_selected_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="@dimen/fab_margin"
            android:layout_gravity="center"
            android:text="Deliver on Saturday, Sunday"
            style="@style/basic_sub_text_field"/>

    </LinearLayout>


</RelativeLayout>
</android.support.v4.widget.NestedScrollView>
