            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_daily_payable_business_name"
                style="@style/basic_text_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Name"/>

            <TextView
                style="@style/basic_sub_text_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_payable_items"
                android:textColor="#969FAA"
                android:text="Items |"/>

            <!--<ImageView
                android:id="@+id/img_daily_summary_item_icon"
                style="@style/image_style"

                />-->


        </LinearLayout>
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


        <!--<TextView
            android:id="@+id/txt_daily_quantity"
            style="@style/basic_sub_text_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="0 pcs"
            android:textSize="16dp"
            />-->
            <!--<TextView
                android:id="@+id/txt_daily_pcs"
                style="@style/basic_sub_text_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Qty   0"

                />-->

            <TextView
                android:id="@+id/txt_daily_business_payable"
                style="@style/basic_sub_text_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Pay   0 /-"

                />

            <TextView
                android:id="@+id/txt_daily_business_profit"
                style="@style/basic_sub_text_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Get   0 /-"

                />
        </LinearLayout>
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_line" />


