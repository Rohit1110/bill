<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="windowActionBar">false</item>1
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="android:spinnerItemStyle">@style/MooSpinnerItem</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
    </style>

    <style name="MooSpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/MooTextAppearanceSpinnerItem</item>
    </style>

    <style name="MooTextAppearanceSpinnerItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#FF343F4B</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>


    </style>
    <style name="AppTheme.Actionbar" parent="AlertDialog.AppCompat.Light">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/textviewstyle</item>

    </style>

    <!--   <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">@style/textviewstyle</item>
    </style>-->


    <style name="textviewstyle">

        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">35sp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="edittextstyle">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">35sp</item>
        <!--<item name="android:lineSpacingMultiplier">0.23</item>-->
    </style>

    <style name="textviewtitle">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <!--<item name="android:lineSpacingMultiplier">0.44</item>-->
    </style>

    <style name="regedittext">
        <item name="android:textColor">#FF343F4B</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:singleLine">true</item>

        <!--<item name="android:lineSpacingMultiplier">0.32</item>-->
    </style>

