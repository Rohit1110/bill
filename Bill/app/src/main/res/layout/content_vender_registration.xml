<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:layout_above="@+id/fab_vregister"
                                             app:layout_behavior="@string/appbar_scrolling_view_behavior"
                                             tools:context="com.reso.bill.VendorRegistration"
                                             tools:showIn="@layout/activity_vender_registration">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bgGray">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                >

                <TextView
                    style="@style/textviewtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"/>

                <EditText
                    android:id="@+id/et_name"
                    style="@style/regedittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Name"

                    />

                <TextView
                    style="@style/textviewtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"/>

                <EditText
                    android:id="@+id/et_email"
                    style="@style/regedittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Email address"

                    />


                <TextView
                    style="@style/textviewtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact"/>

                <EditText
                    android:id="@+id/et_phone"
                    style="@style/regedittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Contact"
                    />

                <TextView
                    style="@style/textviewtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pan ID"/>

                <EditText
                    android:id="@+id/et_pan_number"
                    style="@style/regedittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/home"
                    android:hint="Enter Pan ID"
                    />

                <TextView
                    style="@style/textviewtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adhar Number"/>

                <EditText
                    android:id="@+id/et_aadhar_number"
                    style="@style/regedittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/home"
                    android:hint="Enter Adhar number"
                    />

                <TextView
                    style="@style/textviewtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Business Name"/>

                <EditText
                    android:id="@+id/et_business_name"
                    style="@style/regedittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Business Name"
                    />

                <TextView
                    style="@style/textviewtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Locations"/>

                <!--<Spinner
                    android:id="@+id/sp_area"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100px"
                    android:drawSelectorOnTop="true" />-->

                <com.reso.bill.components.MultiSelectionSpinner
                    android:id="@+id/sp_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/spinner"


                    />


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
