<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <LinearLayout
        android:id="@+id/flayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgGray">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/basic_text_field"
            android:text="Ajinkya Kulkarni"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/imglayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:src="@drawable/sakal"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bgGray"
        android:layout_below="@+id/imglayout"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_mon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="m"
                android:textSize="25dp"
                android:layout_marginLeft="@dimen/fab_margin"
                style="@style/basic_sub_text_field"/>
            <TextView
                android:id="@+id/txt_tue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="t"
                android:layout_marginLeft="@dimen/fab_margin"
                style="@style/basic_sub_text_field"/>
            <TextView
                android:id="@+id/txt_wed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="w"
                android:layout_marginLeft="@dimen/fab_margin"
                style="@style/basic_sub_text_field"/>
            <TextView
                android:id="@+id/txt_thu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="t"
                android:layout_marginLeft="@dimen/fab_margin"
                style="@style/basic_sub_text_field"/>
            <TextView
                android:id="@+id/txt_fri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="f"
                android:layout_marginLeft="@dimen/fab_margin"
                style="@style/basic_sub_text_field"/>
            <TextView
                android:id="@+id/txt_sat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="s"
                android:layout_marginLeft="@dimen/fab_margin"
                style="@style/basic_sub_text_field"/>

            <TextView
                android:id="@+id/txt_sun"
                style="@style/basic_sub_text_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fab_margin"
                android:text="s"
                android:textSize="25dp" />

        </LinearLayout>




        <TextView
            android:id="@+id/txt_discontinue_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_gravity="center"
            android:text="Deliver on Saturday, Sunday"/>

    </LinearLayout>

</RelativeLayout>
