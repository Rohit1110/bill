    <android.support.constraint.ConstraintLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.reso.bill.VendorRegistration"
        tools:showIn="@layout/generic_fragment_update_bill_details">


        <AutoCompleteTextView
            android:id="@+id/et_product_name"
            style="@style/gen_regedittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:hint="Product name"
            android:textSize="@dimen/list_text_main_text"
            app:layout_constraintBaseline_toBaselineOf="@+id/gn_btn_add_invoice_item"
            app:layout_constraintEnd_toStartOf="@+id/gn_btn_add_invoice_item"
            app:layout_constraintStart_toStartOf="parent" />


        <Button
            android:id="@+id/gn_btn_add_invoice_item"
            style="@style/basic_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="ADD"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/include_top"
            layout="@layout/layout_line"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_product_name" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_update_invoice_items"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fadeScrollbars="true"
            android:isScrollContainer="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_top" />

        <include
            android:id="@+id/include2"
            layout="@layout/layout_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recycler_update_invoice_items" />


        <!--<Button
