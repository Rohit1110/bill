<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout8"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:layout_editor_absoluteY="25dp">


    <TextView
        android:id="@+id/txt_customer_subscription_item_name"
        style="@style/basic_sub_text_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="Name"
        app:layout_constraintBottom_toBottomOf="@+id/img_paus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_paus" />

    <ImageView
        android:id="@+id/img_customer_subscription_item_icon"
        style="@style/image_style"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_customer_subscription_item_name" />


    <TextView
        android:id="@+id/textView9"
        style="@style/basic_sub_text_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="Qty:"
        android:textColor="#000000"
        android:textSize="@dimen/list_text_sub_text"
        app:layout_constraintBottom_toBottomOf="@+id/txt_newspaperqty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_newspaperqty"
        app:layout_constraintWidth_percent="0.1" />

    <TextView
        android:id="@+id/txt_newspaperqty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_textview_border"
        android:padding="8dp"
        android:text="1"
        android:textColor="#000000"
        android:textSize="@dimen/list_text_sub_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/img_customer_subscription_item_icon"
        app:layout_constraintWidth_percent="0.2" />

    <ImageView
        android:id="@+id/img_paus"
        android:layout_width="48dp"
        android:layout_height="48dp"

        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:padding="12dp"
        android:src="@drawable/ic_pause_delivery"
        app:layout_constraintEnd_toStartOf="@+id/img_cross"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3" />

    <ImageView
        android:id="@+id/img_cross"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:padding="12dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/txt_weekdays"
        style="@style/basic_sub_text_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bg_textview_border"
        android:padding="8dp"
        android:singleLine="true"
        android:text="MO |TU |WE |TH |FR |SA |SU |"
        android:textSize="@dimen/list_text_sub_text"
        app:layout_constraintBottom_toBottomOf="@+id/txt_newspaperqty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/txt_newspaperqty"
        app:layout_constraintTop_toTopOf="@+id/txt_newspaperqty" />


    <include
        android:id="@+id/include14"
        layout="@layout/layout_line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
