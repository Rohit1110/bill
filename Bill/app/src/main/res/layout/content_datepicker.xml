<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context="com.reso.bill.AddNewspapers"
                 android:background="@color/white"
                tools:showIn="@layout/activity_datepicker">

    <LinearLayout
        android:id="@+id/layout_addnewspaper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="From"/>
            <EditText
                android:id="@+id/txt_todate"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:editable="false"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="To"/>
            <EditText
                android:id="@+id/txt_fromdate"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:editable="false"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"

            android:background="@color/white">
            <Button
                android:id="@+id/btn_save_date"
                style="@style/basic_button"
                android:layout_width="wrap_content"
                android:layout_gravity="top|right"
                android:layout_margin="10dp"
                android:text="save"/>



        </LinearLayout>

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/layout_add_cust"
            layout="@layout/layout_line" />

    </LinearLayout>

