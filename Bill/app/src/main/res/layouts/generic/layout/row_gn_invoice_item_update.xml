<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <TextView
        android:id="@+id/txt_update_inv_item_name"
        style="@style/basic_text_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="none"
        android:singleLine="false"
        android:text="Product name"
        android:textSize="@dimen/list_text_main_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txt_update_inv_item_cross"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.45" />

    <TextView
        android:id="@+id/txt_update_inv_item_quantity"
        style="@style/basic_text_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="1 "
        android:textSize="@dimen/list_text_main_text"
        app:layout_constraintEnd_toStartOf="@+id/txt_update_inv_item_equals"
        app:layout_constraintTop_toTopOf="@+id/txt_update_inv_item_name"
        app:layout_constraintWidth_percent="0.15" />

    <TextView
        android:id="@+id/txt_update_inv_item_cross"
        style="@style/basic_text_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="x"
        android:textSize="@dimen/list_text_main_text"
        app:layout_constraintEnd_toStartOf="@+id/txt_update_inv_item_quantity"
        app:layout_constraintTop_toTopOf="@+id/txt_update_inv_item_name" />

    <TextView
        android:id="@+id/txt_update_inv_item_equals"
        style="@style/basic_text_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="="
        android:textSize="@dimen/list_text_main_text"
        app:layout_constraintEnd_toStartOf="@+id/txt_update_inv_item_amount"
        app:layout_constraintTop_toTopOf="@+id/txt_update_inv_item_quantity" />

    <TextView
        android:id="@+id/txt_update_inv_item_amount"
        style="@style/basic_text_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ellipsize="end"
        android:singleLine="false"
        android:text="0"
        android:textSize="@dimen/list_text_main_text"
        app:layout_constraintEnd_toStartOf="@+id/img_gn_delete_inv_item"
        app:layout_constraintTop_toTopOf="@+id/txt_update_inv_item_equals"
        app:layout_constraintWidth_percent="0.15" />

    <ImageView
        android:id="@+id/img_gn_delete_inv_item"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:padding="12dp"
        android:src="@drawable/ic_action_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/include3"
        layout="@layout/layout_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txn_invoice_info"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />



</android.support.constraint.ConstraintLayout>
