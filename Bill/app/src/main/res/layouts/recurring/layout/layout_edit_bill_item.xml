<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                android:background="@color/white"
                android:orientation="vertical">

    <TextView
        android:id="@+id/txt_dialog_invoice_item_name"
        style="@style/basic_text_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/fab_margin"
        android:text="Item"/>


    <LinearLayout
        android:id="@+id/last_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_dialog_invoice_item_name"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            style="@style/basic_sub_text_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fab_margin"
            android:text="Quantity"/>

        <EditText
            android:id="@+id/et_bill_item_quantity"
            style="@style/basic_sub_text_field"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                style="@style/basic_sub_text_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="INR"/>

            <EditText
                android:id="@+id/et_dialog_invoice_item_amount_multiple"
                style="@style/payamount"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="0.00"
                android:textSize="15sp"/>
            <!--<ImageView
                android:id="@+id/edit_bill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_edit"
                android:layout_marginRight="10dp"/>-->
        </LinearLayout>


    </LinearLayout>

    <include
        layout="@layout/layout_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/last_layout"
        />

    <Button
        android:id="@+id/btn_dialog_save_invoice_item_multiple"
        style="@style/basic_button"
        android:layout_width="wrap_content"
        android:layout_gravity="center|end"
        android:layout_margin="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_below="@id/last_layout"
        android:text="SAVE"/>

    <Button
        android:id="@+id/btn_dialog_cancel_invoice_item_multiple"
        style="@style/basic_button"
        android:layout_width="wrap_content"
        android:layout_gravity="center|end"
        android:layout_margin="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_below="@id/last_layout"
        android:layout_toRightOf="@id/btn_dialog_save_invoice_item_multiple"
        android:text="CANCEL"/>



</RelativeLayout>