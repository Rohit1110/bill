<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/txt_order_customer_name"
        style="@style/rownametitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lato"
        android:text="Ajinkya Kulkarni"
        android:textSize="@dimen/list_text_main_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_order_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sakal: 1"
        android:textColor="@android:color/secondary_text_dark"
        android:textSize="@dimen/list_text_sub_text"
        app:layout_constraintStart_toStartOf="@+id/txt_order_customer_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_order_customer_name" />


    <TextView
        android:id="@+id/txt_order_customer_address"
        style="@style/rownamesubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Customer address line 1"
        android:textColor="@android:color/secondary_text_dark"
        android:textSize="@dimen/list_text_sub_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_order_items" />

    <include
        android:id="@+id/include10"
        layout="@layout/layout_line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />


</android.support.constraint.ConstraintLayout>
