<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.reso.bill.generic.GenericBankDetailsActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    tools:context="com.reso.bill.VendorRegistration"
                    tools:showIn="@layout/fragment_bank_details">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/basic_text_field"
                        android:layout_marginLeft="@dimen/fab_margin"
                        android:text="Bank Information"
                        />


                </LinearLayout>-->
            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/fab_margin"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textviewtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Bank Name"
                        android:textColor="@android:color/secondary_text_dark"
                        android:textSize="@dimen/list_text_sub_text" />

                    <EditText
                        android:id="@+id/et_bank_name"
                        style="@style/regedittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:hint="Enter Bank Name"
                        android:maxLength="40" />

                    <TextView

                        style="@style/textviewtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Account Number"
                        android:textColor="@android:color/secondary_text_dark"
                        android:textSize="@dimen/list_text_sub_text" />

                    <EditText
                        android:id="@+id/et_account_number"
                        style="@style/regedittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:hint="Enter Account number"
                        android:maxLength="20" />

                    <TextView

                        style="@style/textviewtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Account Holder Name"
                        android:textColor="@android:color/secondary_text_dark"
                        android:textSize="@dimen/list_text_sub_text" />

                    <EditText
                        android:id="@+id/et_account_holder"
                        style="@style/regedittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:hint="Enter Account Holder Name" />

                    <TextView
                        style="@style/textviewtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="IFSC Code"
                        android:textColor="@android:color/secondary_text_dark"
                        android:textSize="@dimen/list_text_sub_text" />

                    <EditText
                        android:id="@+id/et_ifsc_code"
                        style="@style/regedittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:hint="Enter IFSC Code"
                        android:maxLength="11" />

                    <TextView
                        style="@style/textviewtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Bank Address"
                        android:textColor="@android:color/secondary_text_dark"
                        android:textSize="@dimen/list_text_sub_text" />

                    <EditText
                        android:id="@+id/et_bank_address"
                        style="@style/regedittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:hint="Enter Branch address" />


                </LinearLayout>


            </android.support.v4.widget.NestedScrollView>


        </LinearLayout>


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
